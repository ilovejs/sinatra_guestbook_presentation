<div class="entry">
  <div class="span-20">
    <h3>Author: <%= @entry.name %></h3>
    <h3>Message: <%= @entry.message %></h3>
  </div>
  <div class="span-4 last">
    <p><a href="/entry/<%= @entry.id %>/edit">Edit</a></p>
    <div class="entry-delete">
      <form method="post" action="/entry/<%= @entry.id %>">
        <input class="hide" name="_method" value="delete" />
        <p><input type="submit" value="Delete"></p>
      </form>
    </div>
  </div>
  <hr />
</div>
<div class="span-24">
  <h3>Comments</h3>
</div>
<div class="prepend-2 span-22">
  <% @entry.comments.each do |comment| %>
    <div class="comment"><p>- <%= comment.body %></p></div>
  <% end %>
</div> 
<p><a href="/entry/<%= @entry.id %>/comment/new">Add Comment</a></p>
<hr />
<p><a href="/entries">View All</a></p>

